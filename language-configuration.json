{
    "comments": {
        "lineComment": "#",
        "blockComment": ["'''", "'''"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" }
    ],
    "surroundingPairs": [
        { "open": "'", "close": "'" },
        { "open": "\"", "close": "\"" },
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "{", "close": "}" }
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*(\b(if|elif|else|for|while|match|class|func)\b.*:).*?$(?!.*\\\").*",
        "decreaseIndentPattern": "^\\s*(elif|else)\\b.*:"
    },
    "folding": {
        "offSide": true,
        "markers": {
            "start": "^\\s*#region\\b",
            "end": "^\\s*#endregion\\b"
        }
    }
}
